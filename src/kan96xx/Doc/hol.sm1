% Take the value of arg1 in prior.
/mergeGroebnerOptions {
  /arg2 set
  /arg1 set
  [/loc /glo /ans] pushVariables
  [
    /loc arg1 def
    /glo arg2 def
    /ans [ ] def
    {
      loc tag 0 eq { /ans glo def exit } { } ifelse
      /ans glo loc join def
      exit
    } loop 
    /arg1 ans def
  ] pop
  popVariables
  arg1
} def

% Construct a list for extension/addModuleOrder
/difftop.addModuleOrder {
  /arg1 set
  [/nn /rank /ol /ii /startpos /jj] pushVariables
  [
    arg1 0 get /nn set   %% number of vars
    arg1 1 get /rank set %% rank of the module
    arg1 2 get /startpos set %% addModuleOrder start position
    [rank,
       1 1 << nn 1 sub >> {
        /ii set
       startpos 1 sub ii add
       [ 1 1 << nn 2 add 2 mul, rank add >> {
           /jj set
           jj << nn 2 add 2 mul, ii sub >> eq {
             -1
           } { 0 } ifelse    
         } for
       ]
      } for,
      startpos ii add,
      [ 1 1 << nn 2 add 2 mul, rank add >> {
          /jj set
          jj << nn 2 add 2 mul >> gt {
%            0 << jj, nn 2 add 2 mul, sub >> sub
             nn 2 add 2 mul, rank add, 1 add, jj sub 
          }{ 0 } ifelse
        } for 
      ]
    ] /arg1 set
  ] pop
  popVariables
  arg1
} def
