} def
% differentil term over position (difftop)
% generators vars weightvec difftop generators vars weightvec 
% Set global variables gb.difftop.*.
% If gb.difftop==1 in gb, then call difftop.reset
/difftop {
  /arg3 set
  /arg2 set
  /arg1 set
  [/aa /f /v /wv /typev /setarg /ndvar] pushVariables
  [
    /gb.difftop 1 def
    /aa [arg1 arg2 arg3] def
    aa { tag } map /typev set
    typev [ArrayP StringP ArrayP] eq
    {  /f aa 0 get def
       /v aa 1 get def
       /wv aa 2 get def
       /setarg 1 def
    } { } ifelse
    typev [ArrayP ArrayP ArrayP] eq
    {  /f aa 0 get def
       /v aa 1 get from_records def
       /wv aa 2 get def
       /setarg 1 def
    } { } ifelse
    setarg { } {(generators vars weightvec for difftop---differential term over pos) error} ifelse
    f gb.toMatrixOfString /f set
    /gb.difftop.rank gb.itWasMatrix def  %% set module rank.
    gb.difftop.rank 0 eq {
      difftop.reset 
      (difftop is for module gb) error
    }{ } ifelse
    [ v to_records /ndvar set] pop
    [ndvar gb.difftop.rank, wv length] difftop.addModuleOrder /gb.difftop.addModuleOrder set
    /arg1 aa def
  ] pop
  popVariables
  arg1 0 get arg1 1 get arg1 2 get
} def

