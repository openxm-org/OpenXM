}

def weyl_adjoint(F) {
    Dn=dn(F); F=nm(F);
    DF=op(F);
    for(Ad=0; DF!=0; DF=dp_rest(DF)) {
        Sign=irem(dp_td(DF),2)==0? 1: -1;
        Ad+=Sign*yang.multi(dp_ht(DF),dp_hc(DF));
    }
    return red(mul(opr(Ad),1/Dn));
}

def coefs(F) {
    Dn=1;
    F=yang.op(F);
    if(type(F)==type([])) {
        Dn=F[1];
        F=F[0];
    }
    for(L=[]; F!=0; F=dp_rest(F)) {
        L=cons(red(dp_hc(F)/Dn),L);
    }
    return reverse(L);
}

