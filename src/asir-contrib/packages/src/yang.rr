def bin_to_pair(Bin,V,W) {
    DP = dp_ptod(Bin, V);
    A = dp_etov(dp_ht(DP)); AC = dp_hc(DP); DP = dp_rest(DP);
    B = dp_etov(dp_ht(DP)); BC = dp_hc(DP); DP = dp_rest(DP);
    if (DP == 0) {
        AW=matrix_inner_product(A,W);
        BW=matrix_inner_product(B,W);
