all : all-samples
all-samples : test test3
all-samples-with-x : test_X test3_X
##
## make   
## make OpenXM_HOME=/usr/local/OpenXM
#CC=gcc -dM -E
CC=@MYCC@
OpenXM_HOME=../../../OpenXM
LIBDIR=${OpenXM_HOME}/lib
INCDIR=${OpenXM_HOME}/include

ASIR_LIB=$(LIBDIR)/libasir.a
ASIR_LIB_X=$(LIBDIR)/libasir_X.a
GC=$(LIBDIR)/libgc.a
LIBEDIT=$(LIBDIR)/libedit.so
#EXTRALIB=-lnsl -lsocket
EXTRALIB=
LOPT_X=-L/usr/X11R6/lib -L/opt/X11/lib -L${LIBDIR} -lpthread -lmpfr -lmpc -lgmp -lm -lX11 -lXt -lXaw
LOPT=-L${LIBDIR} -lpthread -lmpfr -lmpc -lgmp -lm

INCLUDE=$(INCDIR)

## test : test.o  
test : test.o 
	${CC} -o test test.o $(ASIR_LIB) $(GC) $(EXTRALIB) $(LOPT)
test_X : test.o 
	${CC} -o test test.o $(ASIR_LIB_X) $(PARI_LIB) $(LIBEDIT) $(GC) $(EXTRALIB) $(LOPT_X)

test1 : test1.o 
	${CC} -o test1 test1.o $(ASIR_LIB) $(GC) $(EXTRALIB) $(LOPT)

test1_X : test1.o 
	${CC} -o test1 test1.o $(ASIR_LIB_X) $(LIBEDIT) $(GC) $(EXTRALIB) $(LOPT_X)

## test2 : test2.o  
test2_X : test2.o 
	${CC} -o test2 test2.o $(ASIR_LIB_X) $(LIBEDIT) $(GC) $(EXTRALIB) $(LOPT_X)

## test3 : test3.o  
test3_X : test3.o 
	${CC} -o test3 test3.o $(ASIR_LIB) $(PARI_LIB) $(LIBEDIT) $(GC) $(EXTRALIB) $(LOPT_X)

test3 : test3.o 
	${CC} -o test3 test3.o $(ASIR_LIB) $(GC) $(EXTRALIB) $(LOPT)


test1-tcp-rev: test1-tcp-rev.c
	${CC} -o test1-tcp-rev test1-tcp-rev.c 

.c.o : hhh.h
	${CC} $(CFLAGS) -I$(INCLUDE) -c -g $<

clean :
	rm -f test test1 test2 test3 *.o *~ *.a  a.out test_X test1_X test2_X test3_X
